<style>
    .pakke_container{
    display: flex;
    justify-content: space-around; /* Distributes the cards evenly */
    flex-wrap: wrap; /* Allows cards to wrap to the next line if necessary */
    gap: 20px; /* Adds space between the cards */
    padding: 20px;
    background-color: #ffffff; /* Background color for the container */
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .pakke{
     background-color: var(--contrast-color);
    color: #ffffff;
    padding: 20px;
    border-radius: 18px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 12rem;
    box-sizing: border-box;
    text-align: center;
    height: 21rem;
    }

    .icon_bg{
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #ffffff;
        height: 9rem;
        border-radius: 18px;
        margin-top: 1rem;

    }

    h2{
color: var(--accent-color);
    }
    
    .icon{
        align-items: center;
        width: 70%;
    }

.pris{
    margin-top: 1rem;
    white-space: nowrap;
}

.btn{
    display: flex;
    align-items: center;
    justify-content: center;
    list-style: none;
    text-decoration: none;
    margin-top: 2rem;
    background-color: var(--accent-color);
    border-radius: 8px;
    height: 2rem;
}

a{
    text-decoration: none;
    color: #000000;

}
/* card slut */

img{
    padding: 1rem;
}

.img_container{
background-color: var(--contrast-color);
}

.img_container h1, .img_container p {
    color: var(--primary-background-color);
}

.txt_btn{
    background-color: var(--contrast-color);
    color: #ffffff;
    padding: 2rem;
}

.om_h1{
    margin: 1rem;
    font-size: 3rem;
}
.om_p{
    width: 300px;
    margin-top: 3rem;
}

.img_container .btn{
    display: inline-block;
    display: flex;
    width: 7rem;
    justify-content: center;
    align-items: center;
}

@media(min-width:800px){

.img_container{
display: grid;
grid-template-columns: 1fr 1fr;
}

.img_container img {
grid-row: 1/5;
}

.img_container h1 {
    grid-row: 2/3;
    grid-column: 1/2;
}

.txt_btn {
    grid-row: 3/4;
    padding: 3rem;
}


.om_h1{
padding: 2rem;
 font-size: 3rem;
}
.om_p{
 width: 600px;
}
    
}
</style>