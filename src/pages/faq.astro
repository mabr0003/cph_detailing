---
import MainLayout from "../layouts/MainLayout.astro";
import DropDown from "../components/DropDown.astro";
import LogoBar from "../components/LogoBar.astro";
---

<MainLayout title="Om os">
  <main>
    <section class="hero_index">
      <div class="hero_items">
        <h1>FÅ SVAR PÅ DINE SPØRGSMÅL</h1>
        <p>Opdag hvad der driver os til at levere den bedste bilplejeoplevelse</p>
      </div>
    </section>
    <LogoBar />
  </main>
</MainLayout>

<style>
  .hero_index {
    display: grid;
    grid-template-rows: 1fr 2fr 1fr;
    height: 100vh;
    width: 100vw;
    background-image: url("carfrontview.avif");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 50%;
    color: var(--primary-background-color);
    background-attachment: fixed;
  }

  .hero_index p {
    display: none;
  }

  .hero_items {
    grid-row: 2/3;
    margin-left: 1rem;
    align-self: end;
    padding-bottom: 8rem;
  }

  .hero_items h1 {
    font-size: 4.2rem;
  }

  .faq-container {
    max-width: 600px;
    margin: 0 auto;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  @media (min-width: 800px) {
    .hero_index p {
      display: block;
      margin: 1rem 0;
    }

    .hero_index {
      grid-template-columns: 1fr 2fr 1fr;
    }
    .hero_items {
      grid-column: 2/3;
      justify-items: end;
    }
  }
</style>
