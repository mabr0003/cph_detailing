---
const { data } = Astro.props;
---

<div class="faq-item">
  <div class="faq-question">
    <span><p>{data.service}</p></span>
    <span class="faq-toggle">+</span>
  </div>
  <div class="faq-answer">
    <p>{data.description}</p>
    <div class="time_price">
      <div>
        <div class="time"><img src="timeicon.svg" alt="time" /> <p>Varighed:</p></div>
        <p>{data.time}</p>
      </div>
      <div>
        <div class="price"><img src="priceicon.svg" alt="price" /> <p>Pris:</p></div>
        <p>{data.price}</p>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const faqItems = document.querySelectorAll(".faq-item");

    faqItems.forEach((item) => {
      item.addEventListener("click", function () {
        this.classList.toggle("active");
      });
    });
  });
</script>
<style>
  .faq-item {
    border-bottom: 1px solid #ccc;
    padding: 10px 10px;
    cursor: pointer;
  }

  .faq-question {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease;
  }

  .faq-answer p {
    margin: 10px 0;
  }

  .faq-toggle {
    font-size: 24px;
    line-height: 1;
    transition: transform 0.5s ease;
  }

  .faq-item.active .faq-answer {
    max-height: 500px; /* Tilpas denne vÃ¦rdi efter behov */
  }

  .faq-item.active .faq-toggle {
    transform: rotate(45deg);
  }

  .time_price img {
    width: 30px;
    height: 30px;
    align-self: center;
    margin-right: 1rem;
  }

  .time_price > div {
    margin-bottom: 2rem;
  }

  .time {
    display: flex;
  }

  .price {
    display: flex;
  }

  @media (min-width: 800px) {
    .faq-answer {
      display: flex;
      justify-content: space-between;
      padding: 1rem 3rem 0 3rem;
    }

    .time_price {
      display: flex;
    }

    .time {
      margin-right: 2rem;
    }
  }
</style>
